<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://www.gstatic.com/charts/loader.js"></script>
    <title>Students Performance</title>
    <!-- Include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <title>Review</title>
</head>
<body>
  <!-- Navbar -->
  <div class="dark:bg-gray-900">
    <div>
        <div class="relative">
            <!-- For large screens -->
            <div class="dark:bg-gray-900 bg-gray-50 px-6 py-9">
                <div class="container mx-auto flex items-center justify">
                    <h1 class="md:w-2/12 cursor-pointer text-gray-800 dark:text-white" aria-label="the Crib.">
                        <img class="dark:hidden" src="https://pvppcoe.ac.in/wp-content/uploads/2022/12/vslogo-1024x165.png" alt="logo">
                       <img class="dark:block hidden" src="https://pvppcoe.ac.in/wp-content/uploads/2022/12/vslogo-1024x165.png" alt="logo">
                    </h1>
                    <ul class="hidden w-8/12 md:flex items-center justify-center space-x-10">
                        <li>
                            <a href="/" class="dark:text-white text-base text-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-800 hover:underline">Home</a>
                        </li>
                        <li>
                            <a href="/students" class="dark:text-white text-base text-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-800 hover:underline">Students</a>
                        </li>
                        <li>
                            <a href="/stats" class="dark:text-white text-base text-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-800 hover:underline">Stats</a>
                        </li>
                        <li>
                            <a href="/profile" class="dark:text-white text-base text-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-800 hover:underline">Profile</a>
                        </li>
                    </ul>    
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mx-auto mt-5">
  <div class="grid grid-cols-2 gap-4">
    <!-- student boi 1 -->
      <div class="bg-blue-200 p-4">
          <div class="container mx-auto flex justify-center items-center">
            <img src="<%=studentboi1.qrlink%>" alt="User Avatar" class=" w-32 h-32 animated slide-in-left">
        </div>
        <h2 class="text-2xl font-semibold text-center mt-4 animated fade-in"><%=studentboi1.name%></h2>
        <p class="text-gray-600 text-center animated fade-in">DSE 2022-2023</p>
      </div>
    <!-- student boi 2 -->
      <div class="bg-green-200 p-4">
          <div class="container mx-auto flex justify-center items-center">
            <img src="<%=studentboi2.qrlink%>" alt="User Avatar" class=" w-32 h-32 animated slide-in-left">
        </div>
        <h2 class="text-2xl font-semibold text-center mt-4 animated fade-in"><%=studentboi2.name%></h2>
        <p class="text-gray-600 text-center animated fade-in">DSE 2022-2023</p>
      </div>
  </div>
  <br>
  <br>
  <center>
    <div id="curve_chart" ></div>
</center> 
</div>
<div id="student1" data-ejs-data="<%= JSON.stringify(studentboi1) %>"></div>
<div id="student2" data-ejs-data="<%= JSON.stringify(studentboi2) %>"></div>

        <script type="text/javascript">
            var student1 = JSON.parse(document.getElementById('student1').getAttribute('data-ejs-data'));
            var student2 = JSON.parse(document.getElementById('student2').getAttribute('data-ejs-data'));
            google.charts.load('current', {'packages':['corechart']});
            google.charts.setOnLoadCallback(drawChart);
      
            function drawChart() {
              var data = google.visualization.arrayToDataTable([
                ['Subjects', student1.name, student2.name],
                ['CN',  student1.cn,      student2.cn],
                ['DWM',  student1.dwm,      student2.dwm],
                ['AI',  student1.ai,      student2.ai],
                ['STAT-AI',  student1.statat,       student2.statat],
                ['WC',  student1.wc,      student2.wc]
              ]);
              var options = {
                title: `IA-1 Marks of ${student1.name} and ${student2.name}`,
                curveType: 'function',
                legend: { position: 'bottom' },
              };
      
              var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));
      
              chart.draw(data, options);
            }
          </script>

   
    
      
</body>
</html>